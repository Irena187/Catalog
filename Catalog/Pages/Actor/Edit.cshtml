            </div>

            <div class="form-group">
                <label asp-for="Actor.Age" class="control-label"></label>
                <input asp-for="Actor.Age" class="form-control" />
                <span asp-validation-for="Actor.Age" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Actor.Nationality" class="control-label"></label>
                <input asp-for="Actor.Nationality" class="form-control" />
                <span asp-validation-for="Actor.Nationality" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
