@page
@model Catalog.Pages_Actor.IndexModel

@{
    ViewData["Title"] = "Actors";
}

<h1>Actors</h1>

@if (User.IsInRole("Manager") || User.IsInRole("Admin"))
{
    <p>
        <a asp-page="Create" class="btn btn-success">Create New Actor</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Actor[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Actor[0].Age)</th>
            <th>@Html.DisplayNameFor(model => model.Actor[0].Nationality)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Actor)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem => item.Nationality)</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>

                    @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
                    {
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
