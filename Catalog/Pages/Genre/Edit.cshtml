@page
@model Catalog.Pages_Genre.EditModel

@{
    ViewData["Title"] = "Edit Genre";
}

<h1>Edit Genre</h1>

<h4>Genre</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Genre.Id" />

            <div class="form-group">
                <label asp-for="Genre.Name" class="control-label"></label>
                <input asp-for="Genre.Name" class="form-control" />
                <span asp-validation-for="Genre.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Genre.Description" class="control-label"></label>
                <textarea asp-for="Genre.Description" class="form-control"></textarea>
                <span asp-validation-for="Genre.Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
