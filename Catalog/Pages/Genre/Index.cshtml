@page
@model Catalog.Pages_Genre.IndexModel

@{
    ViewData["Title"] = "Genres";
}

<h1>Genres</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <p>
        <a asp-page="Create" class="btn btn-primary">Create New Genre</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Genres[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Genres[0].Description)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model.Genres)
        {
            <tr>
                <td>@genre.Name</td>
                <td>@genre.Description</td>
                <td>
                    <a asp-page="Details" asp-route-id="@genre.Id" class="btn btn-info btn-sm">Details</a>

                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <a asp-page="Edit" asp-route-id="@genre.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-page="Delete" asp-route-id="@genre.Id" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
